pipeline {
    agent any

    environment {
        
        TERRAFORM_DIR = "/usr/bin/terraform"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', url: 'https://github.com/pavithra-m13/Docker_terraform_Pipeline.git'
            }
        }
       
        stage('Deploy Website to Apache') {
            steps {
            sh   '''echo "Deploying to Apache server..."
                    sudo cp -r apache/public-html/* /var/www/html/
                    sudo systemctl restart apache2'''
            }
        }

        
    }
}
